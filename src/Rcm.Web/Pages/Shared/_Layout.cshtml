@using Rcm.Web.Extensions;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/layout.css" />
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/flatpickr/dist/flatpickr.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/flatpickr/dist/flatpickr.min.css" />
    </environment>
    @RenderSection("Styles", false)
</head>
<body>
    <nav>
        <ul>
            <li>
                <a asp-page="/Daily" class="@(Html.GetActiveClass("/Daily"))">Today</a>
            </li>
            <li>
                <a asp-page="/History" class="@(Html.GetActiveClass("/History"))">History</a>
            </li>
        </ul>
    </nav>

    <div class="content">
        @RenderBody()
    </div>

    <script type="text/javascript">
        const pageModule = "@ViewData["Module"]";
    </script>
    <script data-main="./js/bootstrap.js" src="~/lib/requirejs/require.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
