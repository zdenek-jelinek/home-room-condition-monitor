@page
@{
    ViewData["Title"] = "Measurements history";
    ViewData["Module"] = "History";
}

@section Styles {
    <link rel="stylesheet" href="~/css/history.css" asp-append-version="true" />
}

<div class="time-input">
    <label for="time-range">Period shown</label>
    <input id="time-range" />
</div>

<div id="measurements-loading">
    <h2>Loading...</h2>
</div>

<div id="measurements-none">
    <p>No measurement data available for selected period.</p>
</div>

<div id="measurements-available">
    <table>
        <thead>
            <tr>
                <td>Time</td>
                <td>Temperature [°C]</td>
                <td>Pressure [hPa]</td>
                <td>Relative humidity [%]</td>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>